
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model BuildCompleteEcommerceWithASPNETCoreMVC.Models.Photo

<section class="content-header">
    <h1>
        Add Photo to @ViewBag.Product.Name
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Photo Information</h3>
                    </div>
                  
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-area="admin" 
                          asp-controller="photo" 
                          asp-action="add"
                          method="post"
                          enctype="multipart/form-data" >

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputFile">Photo</label>
                                <input type="file"
                                       id="exampleInputFile"
                                       accept="image/*"
                                       name="formFile">
                            </div>
                   

                            <div class="checkbox">
                                <label>
                                    <input class="checkbox" type="checkbox" asp-for="Status"> Status
                                </label>
                            </div>

                        </div>

                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <input type="hidden" asp-for="ProductId" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>