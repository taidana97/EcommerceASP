
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model BuildCompleteEcommerceWithASPNETCoreMVC.Areas.Admin.Models.ViewModels.ProductViewModel

<section class="content-header">
    <h1>
        Add New Product
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Product Information</h3>
                    </div>
                    @*<span class="text-green">@ViewBag.msg</span>*@

                    <!-- /.box-header -->
                    <!-- form start -->
                <form asp-area="admin"
                      asp-controller="product"
                      asp-action="add"
                      method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text"
                                   asp-for="Product.Name"
                                   class="form-control"
                                   required="required">
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control"
                                      asp-for="Product.Description"
                                      rows="3">
                                </textarea>
                        </div>

                        <div class="form-group">
                            <label>Details</label>
                            <textarea class="form-control"
                                      asp-for="Product.Details"
                                      rows="3">
                                </textarea>
                        </div>

                        <div class="form-group">
                            <label for="Price">Price</label>
                            <input type="number"
                                   asp-for="Product.Price"
                                   class="form-control"
                                   required="required">
                        </div>

                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="number"
                                   asp-for="Product.Quantity"
                                   class="form-control"
                                   required="required"
                                   min="0">
                        </div>

                        <div class="form-group">
                            <label>Category</label>
                            <select asp-for="Product.CategoryId"
                                    asp-items="@Model.Categories"
                                    class="form-control">
                            </select>
                        </div>

                        @*<div class="form-group">
            <label for="exampleinputfile">photo</label>
            <input type="file"
                   id="exampleinputfile"
                   accept="image/*"
                   name="photo">
        </div>*@

                        <div class="checkbox">
                            <label>
                                <input class="checkbox" type="checkbox" asp-for="Product.Status"> Status
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input class="checkbox" type="checkbox" asp-for="Product.Featured"> Featured
                            </label>
                        </div>

                    </div>

                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>