
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using BuildCompleteEcommerceWithASPNETCoreMVC.Models;


<section class="content-header">
    <h1>
        Product List
    </h1>
</section>

<section class="content">

    @if (TempData["error"] != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box-alert -->
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> Failed!</h4>
                    Deleted Failed!
                </div>
            </div>
        </div>
    }
    else if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> Alert!</h4>
            Deleted Success!
        </div>
    }


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Product List</h3>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="productListTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Photo</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Category</th>
                                <th>Featured</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in ViewBag.Products)
                            {
                                Product pr = (Product)product;
                                var photo = pr.Photos.SingleOrDefault(p => p.Featured == true);
                            <tr>
                                <td>@product.Id</td>
                                <td>
                                    @product.Name
                                </td>
                                <td>
                                    <img src="~/product/@photo.Name" width="120" />
                                </td>
                                <td>
                                    @product.Price
                                </td>
                                <td>
                                    @(product.Status ? "Show":"Hide")
                                </td>
                                <td>
                                    @product.Category.Name
                                </td>
                                <td>
                                    @(product.Featured ? "Featured":"")
                                </td>
                                <td>
                                    <a asp-area="admin"
                                       asp-controller="product"
                                       asp-action="edit"
                                       asp-route-id="@product.Id">
                                        Edit
                                    </a>
                                    <span> | </span>
                                    <a asp-area="admin"
                                       asp-controller="product"
                                       asp-action="delete"
                                       asp-route-id="@product.Id"
                                       onclick="return confirm('Are you sure?')">
                                        Delete
                                    </a>
                                    <span> | </span>
                                    <a asp-area="admin"
                                       asp-controller="photo"
                                       asp-action="index"
                                       asp-route-id="@product.Id">
                                        Product List
                                    </a>
                                    <span> | </span>
                                    <a asp-area="admin"
                                       asp-controller="photo"
                                       asp-action="add"
                                       asp-route-id="@product.Id">
                                        Add Photo
                                    </a>
                                </td>
                            </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Photo</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Category</th>
                                <th>Featured</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<script>
    $(function () {
        $('#productListTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>
