
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model BuildCompleteEcommerceWithASPNETCoreMVC.Models.Category

<section class="content-header">
    <h1>
        Edit Category
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Category Information</h3>
                    </div>
                    @*<span class="text-green">@ViewBag.msg</span>*@

                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-area="admin" asp-controller="category" asp-action="edit" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input 
                                       type="text"
                                       asp-for="Name" 
                                       class="form-control"
                                       required="required"
                                >
                            </div>                           

                            <div class="checkbox">
                                <label>
                                    <input class="checkbox" type="checkbox" asp-for="Status" > Status
                                </label>
                            </div>
                        </div>

                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>