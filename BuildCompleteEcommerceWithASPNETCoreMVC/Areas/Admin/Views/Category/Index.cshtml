
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <h1>
        Category List
    </h1>
</section>


<section class="content">
    @if (TempData["error"] != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box-alert -->
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> Failed!</h4>
                    Deleted Failed!
                </div>
            </div>
        </div>
    }
    else if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> Alert!</h4>
            Deleted Success!
        </div>
    }

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Categories List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Parent</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in ViewBag.categories)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>
                                        <b>
                                            @category.Name
                                        </b>
                                    </td>
                                    <td>
                                        @(category.Status!=null&& category.Status ? "Show":"Hide")
                                    </td>
                                    <td>
                                        @(category.Parent == null ?"": category.Parent.Name)
                                    </td>
                                    <td>
                                        <a asp-area="admin"
                                           asp-controller="category"
                                           asp-action="edit"
                                           asp-route-id="@category.Id">
                                            Edit
                                        </a>
                                        <span> | </span>
                                        @if (
                                      category.InverseParents != null &&
                                      category.InverseParents.Count == 0
                                   )
                                        {
                                            <a asp-area="admin"
                                               asp-controller="category"
                                               asp-action="delete"
                                               asp-route-id="@category.Id"
                                               onclick="return confirm('Are you sure?')">
                                                Delete
                                            </a>
                                            <span> | </span>
                                        }

                                        <a asp-area="admin"
                                           asp-controller="category"
                                           asp-action="addsubcategory"
                                           asp-route-id="@category.Id">
                                            Add Sub Category
                                        </a>
                                    </td>
                                </tr>

                                if (
                                    category.InverseParents != null &&
                                    category.InverseParents.Count != 0
                                    )
                                {
                                    foreach (var subCategory in category.InverseParents)
                                    {
                                        <tr>
                                            <td>@subCategory.Id</td>
                                            <td>
                                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                @subCategory.Name
                                            </td>
                                            <td>
                                                @(subCategory.Status?"Show":"Hide")
                                            </td>

                                            <td>
                                                @subCategory.Parent.Name
                                            </td>

                                            <td>
                                                <a asp-area="admin"
                                                   asp-controller="category"
                                                   asp-action="edit"
                                                   asp-route-id="@subCategory.Id">
                                                    Edit
                                                </a>
                                                <span> | </span>
                                                <a asp-area="admin"
                                                   asp-controller="category"
                                                   asp-action="delete"
                                                   asp-route-id="@subCategory.Id"
                                                   onclick="return confirm('Are you sure?')">
                                                    Delete
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Parent</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>