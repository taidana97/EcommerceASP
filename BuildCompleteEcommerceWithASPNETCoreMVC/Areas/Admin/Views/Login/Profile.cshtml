@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model BuildCompleteEcommerceWithASPNETCoreMVC.Models.Account

<section class="content-header">
    <h1>
        Profile
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Account Information</h3>
                </div>
                <span class="text-green">@ViewBag.msg</span>
                
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-area="admin" asp-controller="login" asp-action="profile" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" asp-for="Username" class="form-control" id="username" required="required">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control" id="password" disabled=""  type="password" required="required" asp-for="Password">
                        </div>

                        <div class="form-group">
                            <label for="fullName">Full Name</label>
                            <input type="text" asp-for="FullName" class="form-control" id="fullName" required="required">
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" asp-for="Email" class="form-control" id="email" required="required">
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status"> Status
                            </label>
                        </div>
                    </div>

                    
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
            <!-- /.box -->

        </div>
    </div>
</section>

