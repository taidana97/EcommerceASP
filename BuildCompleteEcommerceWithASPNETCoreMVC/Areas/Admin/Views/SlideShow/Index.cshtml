
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <h1>
        SlideShow List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">SlideShow List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Photo</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slideShows in ViewBag.SlideShows)
                            {
                            <tr>
                                <td>@slideShows.Id</td>
                                <td>
                                    <img src="~/slideshows/@slideShows.Name" width="120" />
                                </td>
                                <td>@slideShows.Title</td>
                                <td>@slideShows.Description</td>
                                <td>
                                    @(slideShows.Status ? "Show":"Hide")
                                </td>
                                <td>
                                    <a asp-area="admin"
                                       asp-controller="slideshow"
                                       asp-action="edit"
                                       asp-route-id="@slideShows.Id">
                                        Edit
                                    </a>
                                    <span> | </span>
                                    <a asp-area="admin"
                                       asp-controller="slideshow"
                                       asp-action="delete"
                                       asp-route-id="@slideShows.Id"
                                       onclick="return confirm('Are you sure?')">
                                        Delete
                                    </a>
                                </td>
                            </tr>                               
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>